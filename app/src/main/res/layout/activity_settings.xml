<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:background="@drawable/bg"
    android:layoutDirection="rtl">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Gemini API Key -->
        <EditText
            android:id="@+id/et_gemini_key"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/outline_border"
            android:hint="Gemini API Key"
            android:inputType="text"
            android:layout_marginBottom="4dp"
            android:textColor="@color/highlight_color" />
        <TextView
            android:id="@+id/hint_gemini_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="أدخل مفتاح Gemini هنا. يُستخدم لإنشاء السكربت والعناوين."
            android:textColor="@color/muted_text"
            android:textSize="12sp"
            android:layout_marginBottom="12dp" />

        <!-- Gemini URL -->
        <EditText
            android:id="@+id/et_gemini_url"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/outline_border"
            android:hint="Gemini URL (اختياري)"
            android:inputType="textUri"
            android:layout_marginBottom="4dp"
            android:textColor="@color/highlight_color" />
        <TextView
            android:id="@+id/hint_gemini_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="نقطة النهاية (إن وُجدت). عادة تُترك فارغة لاستخدام الإعداد الافتراضي."
            android:textColor="@color/muted_text"
            android:textSize="12sp"
            android:layout_marginBottom="12dp" />

        <!-- HuggingFace API Key -->
        <EditText
            android:id="@+id/et_hf_key"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/outline_border"
            android:hint="HuggingFace API Key"
            android:inputType="text"
            android:layout_marginBottom="4dp"
            android:textColor="@color/highlight_color" />
        <TextView
            android:id="@+id/hint_hf_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="توكن Hugging Face. يبدأ غالبًا بـ hf_. يُستخدم لطلبات Stable Diffusion و Img2Vid والـ embeddings."
            android:textColor="@color/muted_text"
            android:textSize="12sp"
            android:layout_marginBottom="12dp" />

        <!-- HuggingFace SD URL -->
        <EditText
            android:id="@+id/et_hf_sd_url"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/outline_border"
            android:hint="HuggingFace SD URL (اختياري)"
            android:inputType="textUri"
            android:layout_marginBottom="4dp"
            android:textColor="@color/highlight_color" />
        <TextView
            android:id="@+id/hint_hf_sd_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="رابط استدعاء مباشر لنموذج SD إن أردت تجاوز modelId."
            android:textColor="@color/muted_text"
            android:textSize="12sp"
            android:layout_marginBottom="12dp" />

        <!-- TTS URL -->
        <EditText
            android:id="@+id/et_tts_url"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/outline_border"
            android:hint="OpenTTS / Coqui URL (اختياري)"
            android:inputType="textUri"
            android:layout_marginBottom="4dp"
            android:textColor="@color/highlight_color" />
        <TextView
            android:id="@+id/hint_tts_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="نقطة نهاية خدمة TTS. اتركها فارغة لاستخدام HF TTS أو Coqui الافتراضي."
            android:textColor="@color/muted_text"
            android:textSize="12sp"
            android:layout_marginBottom="12dp" />

        <!-- FFmpeg path -->
        <EditText
            android:id="@+id/et_ffmpeg_path"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/outline_border"
            android:hint="مسار ffmpeg binary (مثال: /sdcard/ffmpeg)"
            android:inputType="text"
            android:layout_marginBottom="4dp"
            android:textColor="@color/highlight_color" />
        <TextView
            android:id="@+id/hint_ffmpeg_path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="مسار الملف التنفيذي ffmpeg عند استخدام binary خارجي. إذا تستخدم FFmpegKit اتركه فارغًا."
            android:textColor="@color/muted_text"
            android:textSize="12sp"
            android:layout_marginBottom="12dp" />

        <!-- model selectors -->
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="نموذج إنشاء الصورة" android:textColor="@color/highlight_color" />
        <Spinner android:id="@+id/sp_settings_sd_model" android:layout_width="match_parent" android:layout_height="48dp" android:background="@drawable/spinner_box" />
        <TextView
            android:id="@+id/hint_sp_sd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="اختَر نموذج SD هنا. مثال قابل للنسخ: stabilityai/stable-diffusion-xl-base-1.0"
            android:textColor="@color/muted_text"
            android:textSize="12sp"
            android:layout_marginBottom="12dp" />

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="نموذج تحويل الصورة إلى فيديو" android:textColor="@color/highlight_color" />
        <Spinner android:id="@+id/sp_settings_img2vid_model" android:layout_width="match_parent" android:layout_height="48dp" android:background="@drawable/spinner_box" />
        <TextView
            android:id="@+id/hint_sp_img2vid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="اختَر نموذج Img2Vid هنا. مثال: stabilityai/stable-video-diffusion-img2vid"
            android:textColor="@color/muted_text"
            android:textSize="12sp"
            android:layout_marginBottom="12dp" />

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="نموذج تحويل النص إلى صوت" android:textColor="@color/highlight_color" />
        <Spinner android:id="@+id/sp_settings_tts_model" android:layout_width="match_parent" android:layout_height="48dp" android:background="@drawable/spinner_box" />
        <TextView
            android:id="@+id/hint_sp_tts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="اختَر نموذج TTS هنا. مثال: coqui/XTTS-v2. سيتحقق التطبيق إن كان النموذج يدعم استنساخ الصوت."
            android:textColor="@color/muted_text"
            android:textSize="12sp"
            android:layout_marginBottom="12dp" />

        <!-- voice sample -->
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="عينة صوتية للاستنساخ (اختياري)" android:textColor="@color/highlight_color" />
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center_vertical" android:layout_marginBottom="4dp">
            <TextView android:id="@+id/tv_voice_sample_path" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="لم يتم اختيار ملف" android:textColor="@color/muted_text" android:ellipsize="end" android:singleLine="true"/>
            <Button android:id="@+id/btn_pick_voice_sample" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="اختر ملف" />
            <Button android:id="@+id/btn_delete_voice_sample" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="حذف" android:layout_marginLeft="6dp" />
        </LinearLayout>
        <TextView
            android:id="@+id/hint_voice_sample"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="صيغة مقترحة WAV/FLAC. المدة 3–6 ثوانٍ. يُستخدم إن فعّلت 'استخدام استنساخ الصوت'."
            android:textColor="@color/muted_text"
            android:textSize="12sp"
            android:layout_marginBottom="12dp" />

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical|right">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="استخدام استنساخ الصوت" android:textColor="@color/highlight_color" />
            <CheckBox android:id="@+id/cb_use_voice_clone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="12dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/hint_use_clone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="مفعّل فقط إذا دعم النموذج المختار استنساخ الصوت. سيفعل التطبيق هذا تلقائيًا."
            android:textColor="@color/muted_text"
            android:textSize="12sp"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btn_refresh_models"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="تحديث قوائم النماذج (تحقق من README)"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"/>

        <Button android:id="@+id/btn_save_settings" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="حفظ الإعدادات" android:layout_marginTop="8dp" android:layout_marginBottom="20dp"/>
    </LinearLayout>
</ScrollView>
